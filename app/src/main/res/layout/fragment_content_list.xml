<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragments.ContentListFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:menu="@menu/top_app_bar"
                app:navigationIcon="@drawable/side_menu"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="117dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginLeft="85dp"
                    android:src="@drawable/netflix_logo" />
            </com.google.android.material.appbar.MaterialToolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/red" />

        </com.google.android.material.appbar.AppBarLayout>




        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="Popular on Netflix"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />

        <HorizontalScrollView
            android:id="@+id/scrollview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title1"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />


            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="Popular serials"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollview1" />

        <HorizontalScrollView
            android:id="@+id/scrollview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title2"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image12"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image22"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image32"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image42"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image52"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="Best of all time"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollview2" />

        <HorizontalScrollView
            android:id="@+id/scrollview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title3"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image13"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image23"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image33"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image43"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />

                <ImageView
                    android:id="@+id/image53"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/film1" />


            </LinearLayout>
        </HorizontalScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
